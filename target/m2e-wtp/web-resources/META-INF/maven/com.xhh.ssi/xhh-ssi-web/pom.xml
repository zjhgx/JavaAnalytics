  <profiles>
    <profile>
        <!-- 开发profile -->
        <id>dev</id>
        <activation>
            <activeByDefault>true</activeByDefault>
        </activation>
        <properties>
            <classpath.resources>src/main/resources</classpath.resources>
            <webapp.resources>src/main/webapp</webapp.resources>
        </properties>
    </profile>
    <!-- release profile -->
    <profile>
        <id>release</id>
        <properties>
            <classpath.resources>src/release/resources</classpath.resources>
            <webapp.resources>src/release/webapp</webapp.resources>
        </properties>
    </profile>
</profiles>
<build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <version>2.3</version>
            <configuration>
                <webResources>
                    <!-- 优先顺序设定 (先设定的不覆盖)-->
                    <resource>
                        <directory>${webapp.resources}</directory>
                    </resource>
                    <resource>
                        <directory>src/main/webapp</directory>
                    </resource>
                </webResources>
            </configuration>
        </plugin>
    </plugins>
    <resources>
        <resource>
            <directory>src/main/resources</directory>
        </resource>
        <resource>
            <directory>${classpath.resources}</directory>
        </resource>
    </resources>
    </build>
